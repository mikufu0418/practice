<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>投稿一覧</h1>

 <table>
   <thead>
     <tr>
       <th>タイトル</th>
       <th>投稿</th>
     </tr>
   </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規投稿', new_post_path %>

